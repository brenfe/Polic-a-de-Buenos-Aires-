<p id="notice"><%= notice %></p>

<h1>Propiedades</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Dirección</th>
      <th scope="col">Detalles</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.address.direccion %></td>
        <td><%= property.details %></td>
        <td><%= link_to 'Ver', property, class: "btn btn-success", style: "color:white" %></td>
        <td><%= link_to 'Editar', edit_property_path(property), class: "btn btn-primary", style: "color:white" %></td>
        <td><%= link_to 'Eliminar', property, class: "btn btn-danger", style: "color:white", method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @properties %>

<br>

<%= link_to 'Nueva Propiedad', new_property_path, class: "btn btn-primary", style: "color:white" %>
