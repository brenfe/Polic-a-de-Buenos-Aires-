<p id="notice"><%= notice %></p>

<h1>Categorías</h1>

<form method="GET" action="/categories">
  <input type="text" name="filter" class="form-control"/>
  <br>
  <input type="submit" class="btn btn-secondary" value="Buscar" />
</form>
<br>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Ver', category, class: "btn btn-success", style: "color:white" %></td>
        <td><%= link_to 'Editar', edit_category_path(category), class: "btn btn-primary", style: "color:white" %></td>
        <td><%= link_to 'Eliminar', category, class: "btn btn-danger", style: "color:white", method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @categories %>

<br>

<%= link_to 'Nueva Categoría', new_category_path, class: "btn btn-primary", style: "color:white" %>
