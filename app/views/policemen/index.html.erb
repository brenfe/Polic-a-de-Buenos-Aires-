<p id="notice"><%= notice %></p>

<h1>Policías</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Persona</th>
      <th scope="col">Comisaría</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @policemen.each do |policeman| %>
      <tr>
        <td><%= policeman.person.nombre_completo %></td>
        <td><%= policeman.police_station.name %></td>
        <td><%= link_to 'Ver', policeman, class: "btn btn-success", style: "color:white" %></td>
        <td><%= link_to 'Editar', edit_policeman_path(policeman), class: "btn btn-primary", style: "color:white" %></td>
        <td><%= link_to 'Eliminar', policeman, class: "btn btn-danger", style: "color:white", method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @policemen %>

<br>

<%= link_to 'Nuevo Policía', new_policeman_path, class: "btn btn-primary", style: "color:white" %>
