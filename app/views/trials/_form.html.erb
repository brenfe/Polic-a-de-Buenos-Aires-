<%= form_with(model: trial) do |form| %>
  <% if trial.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(trial.errors.count, "error") %> prohibited this trial from being saved:</h2>

      <ul>
        <% trial.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :details, 'Detalles', class: "form-label" %>
    <%= form.text_field :details, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :date, 'Fecha y hora', class: "form-label" %>
    <%= form.datetime_select :date %>
  </div>

  <div class="field">
    <%= form.label :report_id, 'Detalles de la denuncia', class: "form-label" %>
    <%= form.collection_select :report_id, Report.all, :id, :details, { :include_blank => true }, {class: 'form-select'} %>
  </div>

  <div class="actions">
    <%= form.submit 'Guardar Cambios', class: "btn btn-success" %>
  </div>
<% end %>
