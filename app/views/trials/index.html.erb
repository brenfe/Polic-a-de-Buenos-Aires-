<p id="notice"><%= notice %></p>

<h1>Trials</h1>

<table>
  <thead>
    <tr>
      <th>Details</th>
      <th>Date</th>
      <th>Report</th>
      <th>Employee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trials.each do |trial| %>
      <tr>
        <td><%= trial.details %></td>
        <td><%= trial.date %></td>
        <td><%= trial.report_id %></td>
        <td><%= trial.employee_id %></td>
        <td><%= link_to 'Show', trial %></td>
        <td><%= link_to 'Edit', edit_trial_path(trial) %></td>
        <td><%= link_to 'Destroy', trial, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

