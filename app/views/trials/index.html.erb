<p id="notice"><%= notice %></p>

<h1>Juicios</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Detalles</th>
      <th scope="col">Fecha y hora</th>
      <th scope="col">Detalles de la denuncia</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trials.each do |trial| %>
      <tr>
        <td><%= trial.details %></td>
        <td><%= trial.date %></td>
        <td><%= trial.report.details %></td>
        <td><%= link_to 'Ver', trial, class: "btn btn-success", style: "color:white" %></td>
        <td><%= link_to 'Editar', edit_trial_path(trial), class: "btn btn-primary", style: "color:white" %></td>
        <td><%= link_to 'Eliminar', trial, class: "btn btn-danger", style: "color:white", method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @trials %>

<br>

<%= link_to 'Nuevo Juicio', new_trial_path, class: "btn btn-primary", style: "color:white" %>
