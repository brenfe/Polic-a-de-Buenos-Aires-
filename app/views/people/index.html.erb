<p id="notice"><%= notice %></p>

<h1>Personas</h1>

<form method="GET" action="/people">
  <input type="text" name="filter" class="form-control"/>
  <br>
  <input type="submit" class="btn btn-secondary" value="Buscar" />
</form>
<br>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Dirección</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.nombre_completo %></td>
        <td><%= person.address.direccion %></td>
        <td><%= link_to 'Ver', person, class: "btn btn-success", style: "color:white" %></td>
        <td><%= link_to 'Editar', edit_person_path(person), class: "btn btn-primary", style: "color:white" %></td>
        <td><%= link_to 'Eliminar', person, class: "btn btn-danger", style: "color:white", method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @people %>

<br>

<%= link_to 'Nueva Persona', new_person_path, class: "btn btn-primary", style: "color:white" %>
