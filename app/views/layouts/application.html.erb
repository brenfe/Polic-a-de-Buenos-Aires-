<!DOCTYPE html>
<html>
  <head>
    <title>Policia</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'shared/navbar' %>

    <div class="container" style="margin-top: 80px !important; min-height: 950px; margin-bottom: 120px;">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, class: "alert alert-info" %>
      <% end %>
      <div class="d-flex align-items-start">
        <div class="nav flex-column nav-pills me-3" id="v-pills-tab" role="tablist" aria-orientation="vertical" style="background-color: #000029; padding: 20px;">
          <%= link_to "Acusados", defendants_url, class: 'btn btn-outline-light my-1' %>
          <%= link_to "Categorías", categories_url, class: 'btn btn-outline-light my-1' %>
          <%= link_to "Ciudades", cities_url, class: 'btn btn-outline-light my-1' %>
          <%= link_to "Comisarías", police_stations_url, class: 'btn btn-outline-light my-1' %>
          <%= link_to "Daños", damages_url, class: 'btn btn-outline-light my-1' %>
          <%= link_to "Denunciantes", complainants_url, class: 'btn btn-outline-light my-1' %>
          <%= link_to "Denuncias", reports_url, class: 'btn btn-outline-light my-1' %>
          <%= link_to "Direcciones", addresses_url, class: 'btn btn-outline-light my-1' %>
          <%= link_to "Empleados", employees_url, class: 'btn btn-outline-light my-1' %>
          <%= link_to "Juicios", trials_url, class: 'btn btn-outline-light my-1' %>
          <%= link_to "Registrar un empleado", registrations_url, class: 'btn btn-outline-light my-1' %>
          <%= link_to "Personas", people_url, class: 'btn btn-outline-light my-1' %>
          <%= link_to "Policías", policemen_url, class: 'btn btn-outline-light my-1' %>
          <%= link_to "Propiedades", properties_url, class: 'btn btn-outline-light my-1' %>
          <%= link_to "Provincias", provinces_url, class: 'btn btn-outline-light my-1' %>
        </div>
        <div class="container" style="min-height: 700px; background-color: #fff; margin-top: 50px,">
          <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab"><%= yield %></div>
        </div>
      </div>
    </div>
    <%= render 'shared/footer' %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
  </body>
</html>
