<%= form_with(model: address) do |form| %>
  <% if address.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(address.errors.count, "error") %> prohibited this address from being saved:</h2>

      <ul>
        <% address.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :street, class: "form-label" %>
    <%= form.text_field :street, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :number, class: "form-label" %>
    <%= form.number_field :number, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :floor, class: "form-label" %>
    <%= form.number_field :floor, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :apartment, class: "form-label" %>
    <%= form.text_field :apartment, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :city_id, class: "form-label" %>
    <%= form.collection_select :city_id, City.all, :id, :name, { :include_blank => true }, {class: 'form-select'} %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
