<p id="notice"><%= notice %></p>

<h1>Empleados</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Persona</th>
      <th scope="col">Puesto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.person.nombre_completo %></td>
        <td><%= employee.position %></td>
        <td><%= link_to 'Ver', employee, class: "btn btn-success", style: "color:white" %></td>
        <td><%= link_to 'Editar', edit_employee_path(employee), class: "btn btn-primary", style: "color:white" %></td>
        <td><%= link_to 'Eliminar', employee, class: "btn btn-danger", style: "color:white", method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @employees %>

<br>

<%= link_to 'Nuevo Empleado', new_employee_path, class: "btn btn-primary", style: "color:white" %>
