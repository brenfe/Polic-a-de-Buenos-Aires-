<p id="notice"><%= notice %></p>

<h1>Reports</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Details</th>
      <th>Policeman</th>
      <th>Complainant</th>
      <th>Defendant</th>
      <th>Category</th>
      <th>Damage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.date %></td>
        <td><%= report.details %></td>
        <td><%= report.policeman_id %></td>
        <td><%= report.complainant_id %></td>
        <td><%= report.defendant_id %></td>
        <td><%= report.category_id %></td>
        <td><%= report.damage_id %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

