<%= form_with(model: report) do |form| %>
  <% if report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(report.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
        <% report.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :date, 'Fecha y hora', class: "form-label" %>
    <%= form.datetime_select :date %>
  </div>

  <div class="field">
    <%= form.label :details, 'Detalles', class: "form-label" %>
    <%= form.text_field :details, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :policeman_id, 'Policía a cargo de la denuncia', class: "form-label" %>
    <%= form.collection_select :policeman_id, Policeman.all, :id, :person_full_name, { :include_blank => true }, {class: 'form-select'} %>
  </div>

  <div class="field">
    <%= form.label :complainant_id, 'Denunciante', class: "form-label" %>
    <%= form.collection_select :complainant_id, Complainant.all, :id, :person_full_name, { :include_blank => true }, {class: 'form-select'} %>
  </div>

  <div class="field">
    <%= form.label :defendant_id, 'Acusado', class: "form-label" %>
    <%= form.collection_select :defendant_id, Defendant.all, :id, :person_full_name, { :include_blank => true }, {class: 'form-select'} %>
  </div>

  <div class="field">
    <%= form.label :category_id, 'Categoría de la denuncia', class: "form-label" %>
    <%= form.collection_select :category_id, Category.all, :id, :name, { :include_blank => true }, {class: 'form-select'} %>
  </div>

  <div class="field">
    <%= form.label :damage_id, 'Tipo de daño', class: "form-label" %>
    <%= form.collection_select :damage_id, Damage.all, :id, :table_type, { :include_blank => true }, {class: 'form-select'} %>
  </div>

  <div class="actions">
    <%= form.submit 'Guardar Cambios', class: "btn btn-success" %>
  </div>
<% end %>
