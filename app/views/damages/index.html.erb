<p id="notice"><%= notice %></p>

<h1>Daños</h1>

<form method="GET" action="/damages">
  <input type="text" name="filter" class="form-control"/>
  <br>
  <input type="submit" class="btn btn-secondary" value="Buscar" />
</form>
<br>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Tipo</th>
      <th scope="col">Persona</th>
      <th scope="col">Propiedad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @damages.each do |damage| %>
      <tr>
        <td><%= damage.table_type %></td>
        <td><%= damage.person.nombre_completo %></td>
        <td><%= damage.property.address.direccion %></td>
        <td><%= link_to 'Ver', damage, class: "btn btn-success", style: "color:white" %></td>
        <td><%= link_to 'Editar', edit_damage_path(damage), class: "btn btn-primary", style: "color:white" %></td>
        <td><%= link_to 'Eliminar', damage, class: "btn btn-danger", style: "color:white", method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @damages %>

<br>

<%= link_to 'Nuevo Daño', new_damage_path, class: "btn btn-primary", style: "color:white" %>
