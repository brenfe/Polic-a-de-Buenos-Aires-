<p id="notice"><%= notice %></p>

<h1>Provincias</h1>

<form method="GET" action="/provinces">
  <input type="text" name="filter" class="form-control"/>
  <br>
  <input type="submit" class="btn btn-secondary" value="Buscar" />
</form>
<br>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @provinces.each do |province| %>
      <tr>
        <td><%= province.name %></td>
        <td><%= link_to 'Ver', province, class: "btn btn-success", style: "color:white" %></td>
        <td><%= link_to 'Editar', edit_province_path(province), class: "btn btn-primary", style: "color:white" %></td>
        <td><%= link_to 'Eliminar', province, class: "btn btn-danger", style: "color:white", method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @provinces %>

<br>

<%= link_to 'Nueva Provincia', new_province_path, class: "btn btn-primary", style: "color:white" %>
